
@{
    ViewBag.Title = "Formulaire";
}
@model TPLOCAL1.Models.FormulaireModel
@using (Html.BeginForm("ValidationFormulaire", "Home", FormMethod.Post))
{
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/ressources/Index.css" />
    <title>HN - TP LOCAL</title>
</head>
<body>    
    
    <header>
        <img src="~/ressources/GroupeHN.png" class="image" alt="GroupeHN" />
        <h1>Formulaire TP HN avis</h1>
    </header>
    <nav>
        <ul>
            <li><a href="/Home/Index">Accueil</a></li>
            <li><a href="/Home/Index/ListeAvis">Liste avis</a></li>
        </ul>
    </nav>
    <section>
        <table>
            <caption>
                Informations personnelles
            </caption>
            <tr>
                <td>Nom</td>
                <td>@Html.TextBoxFor(model => model.Nom)</td>
                <td style="color:darkred; border:hidden;"><center>@Html.ValidationMessageFor(model => model.Nom)</center></td>
            </tr>
            <tr>
                <td>Prénom</td>
                <td>@Html.TextBoxFor(model => model.Prenom)</td>
                <td style="color:darkred; border:hidden;"><center>@Html.ValidationMessageFor(model => model.Prenom)</center></td>
            </tr>
            <tr>
                <td>Sexe</td>
                <td>
                    <select name="Sexe">
                        <option>Sélectionner un sexe</option>
                        <option value="Femme">Femme</option>
                        <option value="Homme">Homme</option>
                        <option value="Autre">Autre</option>
                    </select>
                </td>
            </tr>
            <tr>
                <td>Adresse</td>
                <td>@Html.TextBoxFor(model => model.Adresse)</td>
                <td style="color:darkred; border:hidden;"><center>@Html.ValidationMessageFor(model => model.Adresse)</center></td>
            </tr>
            <tr>
                <td>Code Postal</td>
                <td>@Html.TextBoxFor(model => model.Cpostal)</td>
                <td style="color:darkred; border:hidden;"><center>@Html.ValidationMessageFor(model => model.Cpostal)</center></td>
            </tr>
            <tr>
                <td>Ville</td>
                <td>@Html.TextBoxFor(model => model.Ville)</td>
                <td style="color:darkred; border:hidden;"><center>@Html.ValidationMessageFor(model => model.Ville)</center></td>
            </tr>
            <tr>
                <td>Adresse Mail</td>
                <td>@Html.TextBoxFor(model => model.Email)</td>                
                <td style="color:darkred; border:hidden;"><center>@Html.ValidationMessageFor(model => model.Email)</center></td>
            </tr>
        </table>    
    <br />
        <table>
            <caption>
                Information formation suivie
            </caption>
            <tr>
                <td>Date début formation</td>
                <td>
                    @Html.TextBoxFor(model => model.DateDF, new
               {
                   @class = "form-control",
                   type = "date"
               })
                </td>
                <td style="color:darkred; border:hidden;"><center>@Html.ValidationMessageFor(model => model.DateDF)</center></td>
            </tr>
            <tr>
                <td>Formation suivie</td>
                <td>
                    <select name="Formation">
                        <option>Sélectionner une formation</option>
                        <option value="Cobol">Formation Cobol</option>
                        <option value="Objet">Formation Objet</option>
                        <option value="Autre">Formation Double Compétence</option>
                    </select>
                </td>
            </tr>
        </table>
        <br />
        <table>
            <caption>
                Avis sur la formation
            </caption>
            <tr>
                <td>Formation Cobol</td>
                <td>@Html.TextBoxFor(model => model.Fcobol)</td>
            </tr>
            <tr>
                <td>Formation C#</td>
                <td>@Html.TextBoxFor(model => model.Csharp)</td>
            </tr>
        </table>
        <br />
        <button id="valider" class="echo-button" type="submit" style="margin-left:170px;">
            Valider
        </button>
    </section>
</body>
</html>
}